# ===========================================
# iDesk Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# Database (PostgreSQL via Docker)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=idesk_db
DB_LOGGING=false

# ===========================================
# JWT Authentication
# ===========================================
# IMPORTANT: Change this in production!
JWT_SECRET=supersecretkey123
JWT_EXPIRES_IN=60m

# ===========================================
# Telegram Bot Configuration
# ===========================================
TELEGRAM_BOT_TOKEN=8552039109:AAEGCm78HLb6FMhXaLw8Wvkws7fiFucVnEg

# Telegram Mode: 'polling' (development) or 'webhook' (production)
TELEGRAM_USE_WEBHOOK=false

# Webhook Configuration (only for production)
TELEGRAM_WEBHOOK_DOMAIN=https://api.yourapp.com
TELEGRAM_WEBHOOK_PATH=/telegram/webhook

# ===========================================
# Redis Configuration (for Bull Queue)
# ===========================================
# Set to 'true' to enable Redis-based queues (recommended for production)
REDIS_ENABLED=false

# Redis connection settings (only needed if REDIS_ENABLED=true)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_DIR=./uploads
UPLOAD_BASE_URL=/uploads

# ===========================================
# Email (SMTP) Configuration
# ===========================================
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email
SMTP_PASS=your-password
SMTP_FROM='iDesk Support <noreply@idesk.com>'

# ===========================================
# Application Settings
# ===========================================
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:80

# ===========================================
# Rate Limiting
# ===========================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
