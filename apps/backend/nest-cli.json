{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "**/*.hbs",
                "outDir": "dist"
            },
            {
                "include": "assets/**/*",
                "outDir": "dist/assets"
            }
        ],
        "watchAssets": true
    }
}